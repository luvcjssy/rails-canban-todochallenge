<div class="task-wrapper">
	<div class="row">
		<div class="col-xs-12 col-md-3"></div>
		<div class="col-xs-12 col-md-6">
			<%= simple_form_for(:task, url: challenge_tasks_path(@challenge, @task), remote: true, html: {role: 'form', class: 'form-inline'}) do |f| %>
				<%= f.input :name, label: false, placeholder: 'Task Name', :input_html => {:class => 'form-control'} %>
				<%= f.input :type, label: false, as: :select, collection: Task.type_collection, prompt: 'Select a task type', :input_html => {:class => 'form-control'} %>
				<%= f.input :point, label: false, placeholder: 'Point', input_html: {style: 'width:60px;', :class => 'form-control'} %>
				<%= f.button :submit, 'Add' %>
				<br/>
				<font color="red">
					<% if @task.errors.any? %>
						<% @task.errors.full_messages.each do |msg| %>
							<div><%= msg %></div>
						<% end %>
					<% end %>
				</font>
			<% end %>
			<br/>
			
	      	<h3>Task</h3>
	      	<div id="task-list">
		        <%= render :partial => 'tasks', :locals => {tasks: @tasks} %>
		    </div>
